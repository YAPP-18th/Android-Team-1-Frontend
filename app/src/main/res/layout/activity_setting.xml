<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.setting.SettingActivity">

    <ImageButton
        android:id="@+id/imagebutton_setting_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@android:color/transparent"
        android:paddingHorizontal="16dp"
        android:paddingVertical="12dp"
        android:src="@drawable/btn_cancel" />

    <TextView
        android:id="@+id/textview_setting_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/notosanskr"
        android:gravity="center_horizontal"
        android:lineSpacingExtra="2sp"
        android:text="@string/setting_title"
        android:textColor="#323232"
        android:textFontWeight="500"
        android:textSize="16sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textview_setting_pushalert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/notosanskr"
        android:lineSpacingExtra="7sp"
        android:paddingStart="20dp"
        android:text="푸시 알림"
        android:textColor="@color/colorBlack"
        android:textSize="14sp"
        android:textStyle="normal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imagebutton_setting_back" />

    <View
        android:id="@+id/view_delimiter_top"
        android:layout_marginTop="27dp"
        app:layout_constraintTop_toBottomOf="@id/textview_setting_pushalert"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey_light"/>

    <TextView
        android:id="@+id/textview_setting_version"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/notosanskr"
        android:lineSpacingExtra="7sp"
        android:paddingStart="20dp"
        android:text="버전 정보"
        android:textColor="@color/colorBlack"
        android:textSize="14sp"
        android:textStyle="normal"
        app:layout_constraintTop_toBottomOf="@id/view_delimiter_top" />


</androidx.constraintlayout.widget.ConstraintLayout>